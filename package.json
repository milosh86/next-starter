{
    "name": "next-starter",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev --turbopack",
        "build": "next build",
        "start": "next start",
        "lint": "npx @biomejs/biome lint --write ./src",
        "check": "npx @biomejs/biome check ./src",
        "pre-commit": "lint-staged",
        "prepare": "husky"
    },
    "dependencies": {
        "next": "15.1.1",
        "react": "^19.0.0",
        "react-dom": "^19.0.0"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "husky": "^9.1.7",
        "postcss": "^8",
        "tailwindcss": "^3.4.1",
        "typescript": "^5"
    },
    "lint-staged": {
        "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
            "biome check --files-ignore-unknown=true"
        ]
    }
}
